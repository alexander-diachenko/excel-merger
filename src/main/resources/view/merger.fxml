<Tab fx:id="mergerTab" xmlns:fx="http://javafx.com/fxml/1" text="Merger" fx:controller="excel.controller.MergerController">
    <content>
        <AnchorPane fx:id="anchorPane" minHeight="0.0" minWidth="0.0" prefHeight="312.0" prefWidth="539.0">
            <children>
                <GridPane fx:id="gridPane" hgap="20.0" prefHeight="371.0" prefWidth="600.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Button fx:id="fromFile" onAction="#selectFromFile" alignment="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="362.0" text="Select 'from' file" />
                        <Label fx:id="fromFilePath" prefHeight="25.0" prefWidth="280.0" GridPane.columnIndex="1" />
                        <HBox fx:id="fromFileFields" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.rowIndex="1">
                            <children>
                                <TextField fx:id="fromId" />
                                <TextField fx:id="fromField" />
                            </children>
                        </HBox>
                        <Button fx:id="toFile" onAction="#selectToFile" alignment="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="362.0" text="Select 'to' file" GridPane.rowIndex="2" />
                        <HBox fx:id="toFileFields" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.rowIndex="3">
                            <children>
                                <TextField fx:id="toId" />
                                <TextField fx:id="toField" />
                            </children>
                        </HBox>
                        <Label fx:id="toFilePath" prefHeight="25.0" prefWidth="280.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Button fx:id="directory" onAction="#selectSaveDirectory" alignment="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="362.0" text="Select directory to save" GridPane.rowIndex="4" />
                        <Label fx:id="saveDirectoryPath" prefHeight="25.0" prefWidth="280.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <HBox fx:id="actions" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.rowIndex="5">
                            <children>
                                <Button fx:id="merge" onAction="#merge" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="140.0" text="Merge" />
                                <Button fx:id="open" onAction="#open" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="140.0" text="Open" disable="true"/>
                            </children>
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                        </HBox>
                        <Label fx:id="complete" prefHeight="96.0" prefWidth="507.0" GridPane.rowIndex="6" />
                        <ProgressIndicator fx:id="progressIndicator" prefHeight="92.0" prefWidth="147.0"
                                           GridPane.columnIndex="1" GridPane.rowIndex="5" visible="false"/>
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </GridPane>
            </children></AnchorPane>
    </content>
</Tab>