<Tab fx:id="allInTab" xmlns:fx="http://javafx.com/fxml/1" text="All in" fx:controller="excel.controller.AllInController">
    <content>
        <AnchorPane fx:id="anchorPane" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <children>
                <GridPane fx:id="gridPane" alignment="CENTER" hgap="20.0" prefHeight="371.0" prefWidth="600.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Button fx:id="file" onAction="#selectFiles" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="310.0" text="Select file(s)" />
                        <Button fx:id="directory" onAction="#selectSaveDirectory" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="332.0" text="Select directory to save" GridPane.rowIndex="1">
                            <padding>
                                <Insets left="10.0" />
                            </padding>
                        </Button>
                        <HBox fx:id="actions" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.rowIndex="5">
                            <children>
                                <Button fx:id="allInButton" onAction="#allIn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="140.0" text="All in" />
                                <Button fx:id="openButton" onAction="#open" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="140.0" text="Open" disable="true"/>
                            </children>
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                        </HBox>
                        <Label fx:id="filesCount" prefHeight="25.0" prefWidth="280.0" GridPane.columnIndex="1" />
                        <Label fx:id="saveDirectoryPath" prefHeight="24.0" prefWidth="280.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label fx:id="complete" style="-fx-text-fill: GREEN; -fx-font-weight: bold;" prefHeight="96.0" prefWidth="507.0" GridPane.rowIndex="6" />
                        <ProgressIndicator fx:id="progressIndicator" prefHeight="92.0" prefWidth="147.0"
                                           GridPane.columnIndex="1" GridPane.rowIndex="5" visible="false"/>
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </GridPane>
            </children>
        </AnchorPane>
    </content>
</Tab>