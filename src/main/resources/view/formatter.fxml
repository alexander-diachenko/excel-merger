<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<Tab fx:id="formatterTab" xmlns:fx="http://javafx.com/fxml/1" text="%tab.formatter"
     fx:controller="excel.controller.FormatterController">
    <AnchorPane fx:id="anchorPane" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
        <GridPane alignment="CENTER" hgap="20.0" prefHeight="371.0" prefWidth="600.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <padding>
                <Insets left="10.0" right="10.0"/>
            </padding>
            <Button onAction="#fileAction" alignment="CENTER" mnemonicParsing="false"
                    prefHeight="25.0" prefWidth="310.0" text="%formatter.button.file.text"/>
            <Label fx:id="filesCount" prefHeight="25.0" prefWidth="280.0" GridPane.columnIndex="1"/>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0"
                  GridPane.rowIndex="1">
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
                <CheckBox fx:id="optionsCheckBox" mnemonicParsing="false">
                    <tooltip>
                        <Tooltip text="%formatter.checkbox.tooltip.options"/>
                    </tooltip>
                </CheckBox>
                <Spinner fx:id="field" disable="true">
                    <valueFactory>
                        <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="1000"/>
                    </valueFactory>
                    <tooltip>
                        <Tooltip text="%formatter.spinner.tooltip.field"/>
                    </tooltip>
                </Spinner>
                <TextField fx:id="value" disable="true">
                    <tooltip>
                        <Tooltip text="%formatter.spinner.tooltip.value"/>
                    </tooltip>
                </TextField>
            </HBox>
            <Button fx:id="format" onAction="#formatAction" contentDisplay="CENTER" mnemonicParsing="false"
                    prefHeight="25.0" prefWidth="140.0" text="%formatter.button.format.text" GridPane.rowIndex="5"
                    disable="true">
                <opaqueInsets>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </opaqueInsets>
            </Button>
            <ProgressIndicator fx:id="progressIndicator" prefHeight="92.0" prefWidth="147.0"
                               GridPane.columnIndex="1" GridPane.rowIndex="5" visible="false"/>
        </GridPane>
    </AnchorPane>
</Tab>